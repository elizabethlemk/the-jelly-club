<h1>Edit Comment:</h1>

<% if flash[:error] %>
  <% flash[:error].each do |error| %>
    <li style=" color: red;"><%= error %></li>
    <% end %>
<% end %>

<%= form_for @user_feedback do |f| %>

  <div id="rating-form">
    <label>Rating</label>
  </div>

  <p><%= f.label :comment %>
  <%= f.text_area :comment %></p>

  <p><%= f.submit "Submit", class: "button" %></p>

<% end %>

<script>
  $('#rating-form').raty({
    path: '/assets/',
    scoreName: 'user_feedback[rating]'
  });
</script>
