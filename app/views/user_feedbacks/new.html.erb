<h1>Add Comment:</h1>

<%= form_for @user_feedback do |f| %>
  <%= f.hidden_field :user_id, value: @current_user.id %>
  <%= f.hidden_field :sandwich_id, value: @sandwich.id %>

  <p><%= f.label :rating %>
  <%= f.text_field :rating%></p>

  <p><%= f.label :comment %>
  <%= f.text_area :comment %></p>

  <p><%= f.submit %></p>

<% end %>
