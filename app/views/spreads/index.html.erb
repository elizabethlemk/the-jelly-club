

<div class="spread-page">
  <div class="actions">
    <div class="nav flex-column nav-pills" role="tablist" aria-orientation="vertical">
      <a class="nav-link active" data-toggle="pill" href="#v-pills-home" role="tab" aria-selected="true">All Spreads</a>
      <a class="nav-link" data-toggle="pill" href="#v-pills-new" role="tab">New Spread</a>
    </div>
  </div>
  <div class="details tab-content">
    <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">
      <ul>
        <% @spreads.each do |spread| %>
        <li><%= link_to spread.name, spread_path(spread) %></li>
        <% end %>
      </ul>
    </div>

    <div class="tab-pane fade show " id="v-pills-new" role="tabpanel" aria-labelledby="v-pills-new-tab">
      <%= render :partial => "spreads/new" %>
    </div>

  </div>
</div>
